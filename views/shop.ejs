<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Thalasson Shop' %></title>
    <link rel="stylesheet" href="/styles/style.css"> <!-- Main Styles -->
    <link rel="stylesheet" href="/styles/shop.css"> <!-- Shop-specific Styles -->
</head>
<body>
    <!-- Header Section -->
    <header>
        <nav>
            <a href="/" class="logo">Thalasson</a>
            <div class="nav-buttons">
                <a href="/our-story">Our Story</a>
                <a href="/shop">Shop</a>
                <a href="/cart">Shopping Cart</a>
                <a href="/health-tips">Health Tips!</a>
                <a href="/details">Our Products</a>
                <a href="/login">Log In</a>
            </div>
        </nav>
    </header>

    <!-- Shop Section -->
    <section class="shop-section">
        <h2>Our Products</h2>
        <div class="product-grid" id="product-grid">
            <% if (products && products.length > 0) { %>
                <% products.forEach(product => { %>
                    <div class="product-card">
                        <img src="<%= product.image || '/assets/images/default-product.png' %>" alt="<%= product.name %>" class="product-image">
                        <h3 class="product-name"><%= product.name %></h3>
                        <p class="product-price">$<%= product.price.toFixed(2) %></p>
                        <a href="/product-detail/<%= product.id %>" class="product-link">View Details</a>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="error-message">
                    <p>Sorry, we couldn't load the products. Please try again later.</p>
                </div>
            <% } %>
        </div>
    </section>

    <!-- Footer Section -->
    <footer>
        <p>Â© <%= new Date().getFullYear() %> Thalasson Water. All rights reserved.</p>
        <p>Contact us at: <a href="mailto:info@thalasson.com">info@thalasson.com</a></p>
    </footer>

    <!-- JavaScript -->
    <script src="/scripts/shop.js" defer></script>
</body>
</html>
